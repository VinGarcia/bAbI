Person = map();
function init() { this.where = "nowhere"; this.items = map(); }
Person.__init__ = init;

Place = map();
function init() { this.items = map(); }
Place.__init__ = init;

people = None
places = None
function reset() {
  people = map()
  places = map()
  
  p_list = list(
    "bathroom", "bedroom", "office",
    "hallway", "garden", "kitchen", "nowhere"
  )
  
  for (name in p_list) {
    places[name] = new(Place)
  }
}

hit=0
miss=0

matcher read {
  "(number); (name)n; (move); to the (place)p;." {
    if (people[n] == None) {
      people[n] = new(Person);
    }

    people[n].where = p;

    finish True
  }

  "(number); (name)n; (pick)v; the (object)obj;(".", " there.")w;" {
    if (people[n] == None) {
      people[n] = new(Person);
    }

    'Move the object from the place to the person:'
    people[n].items[obj] = True;
    places[people[n].where].items[obj] = False;

    finish True
  }

  "(number); (name)n; (drop)v; the (object)o;(".", " there.")w;" {
    if (people[n] == None) {
      people[n] = new(Person);
    }

    'Move the object from the person to the place:'
    people[n].items[o] = False;
    places[people[n].where].items[o] = True;

    finish True
  }

  "(number); Where is the (object)o;? |(word)p;|[0-9 ]*" {

    'Check to see if someone is carrying the object:'
    for (name in people) {
      if (people[name].items[o] == True) {
        if (p == people[name].where) {
          "print('==> at the %s' % people[name].where)"
          hit = hit + 1;
        } else {
          "print('××> at the %s' % people[name].where)"
          miss = miss + 1
        }
        finish True;
      }
    }

    'Check to see if the object was dropped somewhere:'
    for (n in places) {
      if (places[n].items[o] == True) {
        if (p == n) {
          "print('==> at the %s' % n)"
          hit = hit + 1;
        } else {
          "print('××> at the %s' % n)"
          miss = miss + 1
        }
        finish True;
      }
    }

    print('--> %s was not found!' % o);
    finish True
  }
}

